- emoji = target_cat? ? "\u{1F408}" : "\u{1F415}"
- hyphen = (browser.mac?) ? emoji : '-'
- title = t("#{target_tag}.title")
- subtitle = t("#{target_tag}.subtitle")
!!!
%html{lang: I18n.locale}
  %head
    %title= "#{title} #{hyphen} #{subtitle}"
    %meta(name='viewport' content='width=device-width,initial-scale=1.0,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no')
    = stylesheet_link_tag    'application', :media => 'all'
    = javascript_include_tag 'application'
    = favicon_link_tag("#{target_tag}/favicon.ico")
    = csrf_meta_tags
  %body{class: body_class, data: {'rails-env' => Rails.env}}
    %header.GlobalHeader{data: {'header-image-path': image_path("#{target_tag}/logo.#{I18n.locale}.svg"), 'header-image-title': "#{title} #{hyphen} #{subtitle}"}}
